<section>
    <div class="container  d-flex justify-content-center mt-5 mainbg-2">
        <span class="productheader-1 text-uppercase">{{category.category}}</span>
    </div>
</section>

<section>
    <div class="container">
       <div class="">
        <h3 class="text-light">Order ID : <span style="font-size:20px">{{orders._id}}</span></h3>
        <h6 class="text-light">Order Date : <span style="font-size:14px">{{orders.date}}</h6>
       </div>
    </div>
</section>

<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 mt-3">
                <div class="card" style="max-height:600px;">
                    <img class="card-img-top img-thumbnail" src="{{this.product.image.[0]}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.productName}}</h5>
                        <h6>{{this.brand}}</h6>

                    </div>
                    <div class="d-flex justify-content-center align-items-end mb-2 " id="view-more">
                        <a class="mx-1" href="/product-details/{{this.product._id}}">SHOW DETAILS</a>
                        <button onclick="addToCart('{{this.product._id}}') " class="btn addtocart">ORDER AGAIN</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<section>
    <div class="container">
       <div class="">
        <h3 class="text-light">Order ID : <span style="font-size:20px">{{orders._id}}</span></h3>
        <h6 class="text-light">Order Date : <span style="font-size:14px">{{orders.date}}</h6>
       </div>
    </div>
</section>

