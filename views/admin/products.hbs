<section>

  <div class=" text-center main1-3">
                       <span class="span1">PRODUCT</span>
                       <span class="span2">VIEW AS CATEGORY</span>
                   </div>

    <div class="container mt-5">
        <div class="row">
           {{#each category}}
        <div class="col-md-3 " >
            <div class="card  p-1 h-100" style="width:250px">
                 <img class="card-img-top img-thumbnail" src="{{this.image.[0]}}" alt="Card image cap">
                <div class="card-body text-center cardmain">
                     <h5 class="card-title text-uppercase">{{this.category}}</h5>
                </div>
                <div class="d-flex justify-content-center align-items-end mb-3 cardmain">
                   
                    <a href="/admin/product-list/{{this._id}}" class="btn ">SHOW MORE</a>
                    </div>
            </div>
        </div>
        {{/each}}
          
        

</section>
